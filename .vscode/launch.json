{
    "version": "0.2.0",
    "configurations": [

    {
        "name": "Local Lambda Server",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/server/server.py",
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "justMyCode": true
    },
    {
        "name": "(UNTESTED) Remote Lambda Invoke",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/app.py",
        "cwd": "${workspaceFolder}",
        "args": [
          ""
        ],
        "console": "integratedTerminal",
        "stopOnEntry": false,
    },
    {
        "name": "Chalice: Local",
        "type": "python",
        "request": "launch",
        "program": "~/Library/Python/3.9/bin/chalice",
        "cwd": "${workspaceFolder}",
        "env": {
            "NO_SIGN_REQUEST": "true"
          },
        "args": [
          "local",
          "--no-autoreload"
        ],
        "console": "integratedTerminal",
        "justMyCode": true
    },
    {
        "name": "Invoice Report",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/client/generate_invoice_report.py",
        "cwd": "${workspaceFolder}",
        "args": [
            "--user",
            "*"
        ],
        "console": "integratedTerminal",
        "justMyCode": true
    },
    {
        "name": "Sync Public URIs",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/client/sync-public-urls.py",
        "args": [
            "dev"
          ],
          "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "justMyCode": true
    },
    {
        "name": "Refresh Product Docs",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/client/generate_product_docs.py",
        "args": [
            "../vs-boost/raw_instructions.md"
          ],
          "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "justMyCode": true
    }
    ]
}