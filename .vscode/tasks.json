{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "sam: build",
        "type": "shell",
        "command": "sam build",
        "args": [
          "--use-container"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        }
      },
      {
        "label": "sam: deploy",
        "type": "shell",
        "command": "sam deploy --guided",
        "options": {
          "cwd": "${workspaceFolder}"
        }
      },
      {
        "label": "pip: install",
        "type": "shell",
        "command": "${env:VIRTUAL_ENV}/bin/pip install -r requirements.txt",
        "options": {
          "cwd": "${workspaceFolder}"
        }
      },
      {
        "label": "venv: build package",
        "type": "shell",
        "command": "python3 -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt && zip -r boostlambda_package.zip *",
        "options": {
          "cwd": "${workspaceFolder}"
        }
      }
    ]
  }
  